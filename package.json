{
	"name": "sl-project",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@blueprintjs/core": "^3.25.0",
		"@blueprintjs/select": "^3.12.1",
		"@testing-library/jest-dom": "^5.5.0",
		"@testing-library/react": "^10.0.2",
		"@testing-library/user-event": "^10.0.1",
		"@types/chart.js": "^2.9.19",
		"@types/jest": "^25.2.1",
		"@types/lodash": "^4.14.149",
		"@types/node": "^13.11.1",
		"@types/node-sass": "^4.11.0",
		"@types/react": "^16.9.34",
		"@types/react-bootstrap-table-next": "^4.0.0",
		"@types/react-bootstrap-table2-filter": "^1.3.0",
		"@types/react-bootstrap-table2-paginator": "^2.1.0",
		"@types/react-burger-menu": "^2.6.1",
		"@types/react-dom": "^16.9.6",
		"@types/react-router": "^5.1.5",
		"@types/react-router-dom": "^5.1.4",
		"animate.css": "^3.7.2",
		"axios": "^0.19.2",
		"bootstrap-css-only": "^4.4.1",
		"chart.js": "^2.9.3",
		"chartjs-plugin-datalabels": "^0.7.0",
		"core-js": "^3.6.5",
		"lodash": "^4.17.15",
		"moment": "^2.24.0",
		"node-sass": "^4.13.1",
		"normalize.css": "^8.0.1",
		"react": "^16.13.1",
		"react-avatar": "^3.9.2",
		"react-bootstrap-table-next": "^4.0.0",
		"react-bootstrap-table2-filter": "^1.3.1",
		"react-bootstrap-table2-paginator": "^2.1.2",
		"react-burger-menu": "^2.6.13",
		"react-chartjs-2": "^2.9.0",
		"react-dom": "^16.13.1",
		"react-router": "^5.1.2",
		"react-router-dom": "^5.1.2",
		"react-scripts": "3.4.1",
		"redux": "^4.0.5",
		"regenerator-runtime": "^0.13.5",
		"typescript": "~3.8.3"
	},
	"scripts": {
		"dev": "react-scripts start",
		"start": "serve -s build",
		"build": "GENERATE_SOURCEMAP=false react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "tslint --project tsconfig.json -c tslint.commit.json --fix",
		"format": "eslint --fix 'src/**/*.{ts,tsx}' --max-warnings=0 && prettier --write 'src/**/*.{css,scss,ts,tsx}'",
		"prettify": "prettier --write",
		"typecheck": "rm -rf build && tsc --noUnusedLocals",
		"heroku-postbuild": "npm run build"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/redux": "^3.6.0",
		"eslint": "^6.8.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.1.3",
		"prettier": "^2.0.4",
		"tslint": "^6.1.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
		"tslint-etc": "^1.10.1",
		"tslint-react-hooks": "^2.2.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && yarn run typecheck"
		}
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"tslint --project tsconfig.json -c tslint.commit.json --fix",
			"prettier --write",
			"git add"
		],
		"*.json": [
			"prettier --write",
			"git add --force"
		]
	}
}
